@model EventServiceModel

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card mb-3 event-detail-card">
        <div class="text-center">
            <img src="@Model.ImageUrl" class="img-fluid event-image" alt="Image of @Model.Name" style="max-width: 100%; max-height: 400px;">
        </div>
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <p class="card-text">@Model.Description</p>
            <p class="card-text"><strong>Location:</strong> @Model.Location</p>
            <p class="card-text"><strong>Date:</strong> @Model.Date.ToString("dddd, dd MMMM yyyy")</p>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("All", "Event")" class="btn btn-primary">Back to Events</a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .event-image {
            object-fit: cover; 
        }

        .event-detail-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transform: scale(1.02);
            transition: all 0.3s ease-in-out;
        }

        .card-footer {
            background: none;
            border-top: none;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
}
