@model IEnumerable<EventServiceModel>

@{
    ViewData["Title"] = "My Events";
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>
<hr />

<div class="container">
    @if (Model.Any())
    {
        <div class="card-deck">
            @foreach (var eventModel in Model)
            {
                <div class="card mb-4 event-card">
                    <img src="@eventModel.ImageUrl" class="card-img-top" alt="Image of @eventModel.Name">
                    <div class="card-body">
                        <h5 class="card-title">@eventModel.Name</h5>
                        <p class="card-text">@eventModel.Description</p>
                        <p class="card-text">
                            <small class="text-muted">@eventModel.Location</small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">@eventModel.Date.ToString("dddd, MMMM dd, yyyy")</small>
                        </p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            You have not joined any events yet.
        </div>
    }
</div>

@section Styles {
    <style>
        .container {
            max-width: 900px; /* Adjust the max-width as needed */
        }

        .card-deck .card {
            transition: transform .3s ease-in-out, box-shadow .3s ease-in-out;
        }

            .card-deck .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,0,0,.3);
            }

        .card-img-top {
            width: 100%;
            height: 180px; /* Fixed height for consistency */
            object-fit: cover; /* Cover the height fully */
        }

        .event-card {
            min-width: 220px; /* Minimum width for cards */
        }

        .alert-info {
            margin-top: 20px;
        }
    </style>
}
