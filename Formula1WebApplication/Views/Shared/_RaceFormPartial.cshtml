@model RaceServiceModel

<div style="max-width: 500px; margin: auto; padding: 15px;">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" type="datetime-local" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Laps"></label>
            <input asp-for="Laps" class="form-control" type="number" />
            <span asp-validation-for="Laps" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CircuitInfo"></label>
            <textarea asp-for="CircuitInfo" class="form-control"></textarea>
            <span asp-validation-for="CircuitInfo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div style="text-align: center; margin-top: 20px;">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>
