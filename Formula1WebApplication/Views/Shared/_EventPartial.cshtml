@model EventServiceModel
@inject IEventService eventService
@inject IOrganizerService organizerService

<div class="card mb-3 event-card">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="card-img" alt="Event Image" style="max-height: 200px; object-fit: cover;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">@Model.Location</small></p>
                <p class="card-text"><small class="text-muted">@Model.Date.ToString("MMMM dd, yyyy")</small></p>
                <div class="text-center">
                    <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-primary btn-sm uniform-btn">Details</a>
                    @if (await eventService.HasOrganizerWithIdAsync(Model.Id, User.Id()))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary btn-sm uniform-btn">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm uniform-btn">Delete</a>
                    }
                    @if (!await eventService.HasOrganizerWithIdAsync(Model.Id, User.Id()) &&
                         !await eventService.IsJoinedByIUserWithIdAsync(Model.Id, User.Id()))
                    {
                        <form asp-action="Join" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-success btn-sm uniform-btn">Join</button>
                        </form>
                    }
                    else if (await eventService.IsJoinedByIUserWithIdAsync(Model.Id, User.Id()))
                    {
                        <a asp-action="Leave" asp-route-id="@Model.Id" class="btn btn-warning btn-sm uniform-btn">Leave</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>