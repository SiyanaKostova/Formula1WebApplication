@model BecomeOrganizerFormModel

@{
    ViewData["Title"] = "Become an Organizer";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

@if (ViewBag.Success != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Success
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-4">
        <form asp-action="Become" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center mt-4">
                <input type="submit" value="Become Organizer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}