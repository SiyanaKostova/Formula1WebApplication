@model NewsArticleServiceModel

@{
    ViewData["Title"] = "News Article Details";
}

@section Styles {
    <style>
        .article-details-container {
            border: 1px solid #dee2e6; /* Light grey border */
            border-radius: .25rem; /* Rounded corners */
            transition: transform .2s; /* Smooth transition for hover effect */
            margin: auto; /* Centering the card */
            width: 60%; /* Adjust width to make content longer */
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); /* Subtle shadow */
        }

            .article-details-container:hover {
                transform: scale(1.02); /* Slightly increase size */
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2); /* Enhanced shadow on hover */
            }

        .article-image {
            max-height: 250px; /* Increased image height */
            object-fit: cover; /* Ensure the aspect ratio is preserved */
            display: block; /* Block display */
            margin: 20px auto; /* Centering the image with margin */
            border-radius: .25rem; /* Rounded corners for the image */
            width: 80%; /* Increased width */
        }

        .back-button {
            display: inline-block; /* Adjusting display for standard size */
            margin-top: 20px; /* Margin top for spacing */
        }
    </style>
}

<div class="text-center mt-5 mb-3">
    <h2>@Model.Title</h2>
</div>

<div class="article-details-container">
    <img src="@Model.ImageUrl" class="article-image" alt="Image for @Model.Title">
    <div class="p-4">
        <p>@Model.Description</p>
    </div>
</div>

<div class="text-center">
    <a href="@Url.Action("All", "NewsArticle")" class="btn btn-primary back-button">Back to All News Articles</a>
</div>>